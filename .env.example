# Ansible Environment Configuration
# Copy this file to .env and customize for your environment

# System Configuration
ANSIBLE_TIMEZONE=Europe/Helsinki
ANSIBLE_TARGET_USER=deploy
ANSIBLE_HOSTNAME=my-debian-server

# Mail Configuration
ANSIBLE_SMTP_HOST=localhost:8025
ANSIBLE_SMTP_TLS=false
ANSIBLE_SMTP_STARTTLS=false
ANSIBLE_NOTIFICATION_EMAIL=admin@example.com

# Unattended Upgrades
ANSIBLE_AUTO_REBOOT=true
ANSIBLE_REBOOT_TIME=02:00

# Optional: Ansible behavior
ANSIBLE_HOST_KEY_CHECKING=False
