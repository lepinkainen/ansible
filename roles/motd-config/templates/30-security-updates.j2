#!/bin/sh
#
# 30-security-updates - show security update status
#

{% if motd_config.check_security_updates | default(true) %}
# Check for security updates specifically
security_updates=$(apt list --upgradable 2>/dev/null | grep -c "$(lsb_release -cs)-security" 2>/dev/null || echo "0")

if [ "$security_updates" -gt 0 ]; then
    echo "=== Security Updates ==="
    printf "  âš  %d security updates available\n" "$security_updates"
    echo "  Run 'apt upgrade' to install security updates"
    echo
fi
{% endif %}